<configs>
    
    <!-- Add Acid Schematic to T1 loot table -->
    <append xpath="/lootcontainers/lootgroup[@name='schematicsToolsT1']">
        <item name="resourceAcidSchematicDGB" />
    </append>

    <!-- Increase Honey probability from very low to low -->
    <set xpath="/lootcontainers/lootgroup[@name='survivalMedical']/item[@name='foodHoney']/@loot_prob_template">low</set>

    <!-- Add Acid Schematic to T0 loot table -->
    <append xpath="/lootcontainers/lootgroup[@name='schematicsWeaponsArmorT0']">
        <item name="meleeWpnBladeT1MacheteSchematicDGB" />
    </append>

    <!-- Add Acid Schematic to T1 group quest table -->
    <append xpath="/lootcontainers/lootgroup[@name='groupQuestWeaponsMeleeT1']">
        <item name="meleeWpnBladeT1MacheteDGB" />
    </append>

    <!-- Add Acid Schematic to T1 group weapons_melee table -->
    <append xpath="/lootcontainers/lootgroup[@name='groupWeaponsT1_Melee']">
        <item name="meleeWpnBladeT1MacheteDGB" />
    </append>

</configs>